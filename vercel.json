{
    "version": 2,
    "builds": [
        {
            "src": "portfolio/wsgi.py",
            "use": "@vercel/python",
            "config": { "mazLambdaSize": "15mb", "runtime": "python3.10" }
        },
        {
            "src": "build_files.sh",
            "use": "@vercel/static-build",
            "config": {
                "disDir": "staticfiles_build"
            } 
        }
    ],
    "routes": [
        {
            "src": "/portfolio/static/(.*)",
            "dest": "/portfolio/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "portfolio/wsgi.py"
        }
    ]
}